         />

    <Button
        android:id="@+id/btnReproducir"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/play" />

</RelativeLayout>